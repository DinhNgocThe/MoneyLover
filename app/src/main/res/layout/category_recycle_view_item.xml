<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categoryRcvItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imgIconUrlCategoryRcvItem"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/category_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_warning" />

    <View
        android:id="@+id/viewCategoryRcvItem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtTypeCategoryRcvItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/f_and_b"
        android:fontFamily="@font/main_font"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imgIconUrlCategoryRcvItem"
        app:layout_constraintStart_toEndOf="@+id/imgIconUrlCategoryRcvItem"
        app:layout_constraintTop_toTopOf="@+id/imgIconUrlCategoryRcvItem" />
</androidx.constraintlayout.widget.ConstraintLayout>