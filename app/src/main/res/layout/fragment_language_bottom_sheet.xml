<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txtChooseLanguageChangeLanguageFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/main_font_bold"
        android:text="@string/choose_language"
        android:textColor="@color/main_text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnCloseChangeLanguageFragment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:padding="17dp"
        android:layout_marginEnd="5dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/btn_close"
        app:layout_constraintBottom_toBottomOf="@+id/txtChooseLanguageChangeLanguageFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtChooseLanguageChangeLanguageFragment"
        app:srcCompat="@drawable/img_close" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnVietnameseChangeLanguageFragment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/btn_light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCloseChangeLanguageFragment">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/main_font_bold"
            android:text="@string/vietnamese"
            android:textSize="16sp"
            android:textColor="@color/main_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgVietnameseChangeLanguageFragment"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/vietnam_flag"
            app:srcCompat="@drawable/img_vietnam_flag" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnEnglishChangeLanguageFragment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/btn_transparent_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVietnameseChangeLanguageFragment">

        <TextView
            android:id="@+id/txtEnglishChangeLanguageFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/main_font_bold"
            android:text="@string/english"
            android:textColor="@color/main_text"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgEnglishChangeLanguageFragment"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="3dp"
            android:contentDescription="@string/vietnam_flag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_united_kingdom_flag" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChangeLanguageChangeLanguageFragment"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/change_language"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:textSize="18sp"
        android:textColor="@color/main_text_white"
        android:textAllCaps="false"
        android:fontFamily="@font/main_font_bold"
        android:background="@drawable/btn_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEnglishChangeLanguageFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>